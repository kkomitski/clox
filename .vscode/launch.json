{
  "configurations": [
    {
      "name": "LLDB",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "C/C++: clang build active file",
      "initCommands": [
        "type format add -f decimal uint8_t"
      ],
      "args": [
        "./test.txt"
      ]
    },
    {
      "name": "CPPDBG",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "C/C++: clang build active file",
      "setupCommands": [
        {
          "description": "Format OpcodeByte as decimal",
          "text": "type format add -f d OpcodeByte",
          "ignoreFailures": false
        }
      ],
      "args": [
        "./test.txt"
      ]
    },
  ]
}